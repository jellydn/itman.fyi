<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.hero {
		min-height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 4rem 0;
	}
	.profile {
		max-width: 800px;
		margin: 0 auto;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1.1;
		margin-bottom: 1rem;
	}
	.role {
		font-size: 1.5rem;
		color: rgb(var(--accent-light));
		margin-bottom: 1.5rem;
	}
	h2 {
		font-size: 2.5rem;
		font-weight: 600;
		margin-bottom: 2rem;
		text-align: center;
		color: rgb(var(--accent-light));
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.bio {
		color: #a1a1aa;
		font-size: 1.25rem;
		margin-bottom: 2rem;
		line-height: 1.7;
	}
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		margin-top: 2rem;
	}
	.cta-primary, .cta-secondary {
		padding: 0.8rem 2rem;
		border-radius: 8px;
		font-weight: 500;
		font-size: 1.1rem;
		transition: all 0.2s ease-in-out;
		text-decoration: none;
	}
	.cta-primary {
		background: rgb(var(--accent));
		color: white;
	}
	.cta-primary:hover {
		background: rgb(var(--accent-dark));
		transform: translateY(-2px);
	}
	.cta-secondary {
		border: 2px solid rgb(var(--accent));
		color: rgb(var(--accent-light));
	}
	.cta-secondary:hover {
		background: rgba(var(--accent), 0.1);
		transform: translateY(-2px);
	}
	.content-section {
		margin-bottom: 6rem;
	}
	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}
	.project-card {
		background-color: #23262d;
		border-radius: 12px;
		overflow: hidden;
		text-decoration: none;
		color: white;
		transition: transform 0.2s ease-in-out;
	}
	.project-content {
		padding: 2rem;
	}
	.project-card:hover {
		transform: translateY(-4px);
	}
	.project-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: rgb(var(--accent-light));
	}
	.project-card p {
		font-size: 1.1rem;
		margin-bottom: 1.5rem;
		color: #a1a1aa;
		line-height: 1.6;
	}
	.tech-stack {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}
	.tech-stack span {
		background: rgba(var(--accent), 0.1);
		color: rgb(var(--accent-light));
		padding: 0.4rem 0.8rem;
		border-radius: 20px;
		font-size: 0.9rem;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 2rem;
		flex-wrap: wrap;
	}
	.social-card {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem 2rem;
		text-decoration: none;
		color: white;
		background-color: #23262d;
		border-radius: 8px;
		transition: all 0.2s ease-in-out;
		min-width: 200px;
		justify-content: center;
	}
	.social-card:hover {
		transform: translateY(-2px);
		background-color: #2a2d35;
	}
	.social-card svg {
		flex-shrink: 0;
	}
	.social-card span {
		font-size: 1.1rem;
		font-weight: 500;
	}
	.github:hover {
		color: #f5f5f5;
		background-color: #2a2d35;
	}
	.blog:hover {
		color: #00ff00;
		background-color: #2a2d35;
	}
	.email:hover {
		color: #4a9eff;
		background-color: #2a2d35;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 3rem;
		}
		.role {
			font-size: 1.25rem;
		}
		.bio {
			font-size: 1.1rem;
		}
		.project-grid {
			grid-template-columns: 1fr;
		}
		.social-card {
			width: 100%;
		}
	}
</style>