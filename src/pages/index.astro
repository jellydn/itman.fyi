<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: var(--text);
		font-size: 20px;
		line-height: 1.6;
	}
	.hero {
		padding: 4rem 0;
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 1rem;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.bio {
		color: var(--text);
		margin-bottom: 1rem;
		opacity: 0.9;
	}
	.content-section {
		padding: 6rem 0;
		border-top: 1px solid var(--card-border);
	}
	.content-section h2 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 0.75rem;
		text-align: center;
		color: rgb(var(--accent));
	}
	.section-desc {
		text-align: center;
		color: var(--text);
		opacity: 0.7;
		margin-bottom: 4rem;
		font-size: 1.2rem;
	}
	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2.5rem;
		padding: 0;
	}
	.card {
		background-color: var(--card-bg);
		padding: 1rem;
		border-radius: 12px;
		text-decoration: none;
		color: var(--text);
		transition: all 0.3s ease-in-out;
		height: 100%;
		display: flex;
		flex-direction: column;
		border: 1px solid var(--card-border);
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
	}
	.card:hover {
		transform: translateY(-6px);
		border-color: rgb(var(--accent));
		box-shadow: 0 10px 20px rgba(var(--accent), 0.1);
	}
	.card h3 {
		font-size: 1.4rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: rgb(var(--accent));
	}
	.card p {
		flex-grow: 1;
		margin-bottom: 1.5rem;
		line-height: 1.7;
		opacity: 0.9;
	}
	.tech-stack {
		font-size: 1rem;
		color: var(--text);
		opacity: 0.7;
		padding-top: 1rem;
		border-top: 1px solid var(--card-border);
	}
	.video-grid {
		grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
	}
	.video-card {
		position: relative;
		cursor: pointer;
	}
	.video-thumbnail {
		position: relative;
		border-radius: 12px;
		overflow: hidden;
		margin-bottom: 1.5rem;
		border: 1px solid var(--card-border);
	}
	.video-thumbnail img {
		width: 100%;
		height: auto;
		display: block;
		transition: transform 0.3s ease-in-out;
	}
	.video-thumbnail:hover img {
		transform: scale(1.05);
	}
	.play-button {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		color: white;
		opacity: 0.9;
		transition: all 0.3s ease-in-out;
		background-color: rgb(var(--accent));
		padding: 1rem;
		border-radius: 50%;
	}
	.video-thumbnail:hover .play-button {
		opacity: 1;
		transform: translate(-50%, -50%) scale(1.1);
		background-color: rgb(var(--accent-dark));
	}
	.views {
		font-size: 1rem;
		color: var(--text);
		opacity: 0.7;
		margin-top: 1rem;
		padding-top: 1rem;
		border-top: 1px solid var(--card-border);
	}
	.cta-container {
		text-align: center;
		margin-top: 4rem;
	}
	.cta-button {
		display: inline-flex;
		align-items: center;
		padding: 0.75rem 1.5rem;
		background-color: rgb(var(--accent));
		color: white;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease-in-out;
		border: 1px solid transparent;
	}
	.cta-button:hover {
		background-color: rgb(var(--accent-dark));
		transform: translateY(-2px);
	}
	.cta-button .icon {
		width: 1.2rem;
		height: 1.2rem;
		margin-left: 0.5rem;
	}
	.social-links {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 1.5rem;
		margin-top: 2rem;
	}
	.social-link {
		display: flex;
		align-items: center;
		padding: 0.75rem 1.5rem;
		background-color: var(--card-bg);
		color: var(--text);
		border-radius: 8px;
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease-in-out;
		border: 1px solid var(--card-border);
	}
	.social-link:hover {
		transform: translateY(-2px);
		border-color: rgb(var(--accent));
		color: rgb(var(--accent));
	}
	.social-link .icon {
		width: 1.2rem;
		height: 1.2rem;
		margin-right: 0.5rem;
		fill: currentColor;
	}
	.text-accent {
		color: rgb(var(--accent));
	}
	.text-accent:hover {
		color: rgb(var(--accent-dark));
	}
	.logo-container {
		margin-bottom: 2rem;
	}

	.logo {
		width: 200px;
		height: auto;
		transition: transform 0.3s ease;
	}

	.logo:hover {
		transform: scale(1.05);
	}
</style>
