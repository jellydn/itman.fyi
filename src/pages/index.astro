<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	.profile {
		text-align: center;
		margin-bottom: 4rem;
	}
	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 1em;
	}
	h2 {
		font-size: 2rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		color: rgb(var(--accent-light));
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.bio {
		color: rgb(var(--accent-light));
		font-size: 1.2rem;
		margin-bottom: 1rem;
		max-width: 800px;
		margin-left: auto;
		margin-right: auto;
	}
	.content-section {
		margin-bottom: 4rem;
	}
	.video-grid, .blog-grid, .project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}
	.video-card, .blog-card, .project-card {
		background-color: var(--card-bg);
		padding: 1.5rem;
		border-radius: 8px;
		text-decoration: none;
		color: var(--text);
		transition: transform 0.2s ease-in-out, background-color 0.2s ease-in-out;
	}
	.video-card:hover, .blog-card:hover, .project-card:hover {
		transform: translateY(-2px);
		background-color: rgb(var(--accent-light), 0.1);
	}
	.video-card h3, .blog-card h3, .project-card h3 {
		font-size: 1.2rem;
		margin-bottom: 0.5rem;
		color: rgb(var(--accent-light));
	}
	.video-card p, .blog-card p, .project-card p {
		font-size: 1rem;
		margin-bottom: 1rem;
		color: var(--text);
	}
	.date, .tech-stack {
		font-size: 0.9rem;
		color: rgb(var(--accent-light));
	}
	.tech-stack {
		display: block;
		margin-top: 0.5rem;
	}
	.social-links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
		gap: 2rem;
		padding: 0;
		list-style: none;
	}
	.social-card {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		text-decoration: none;
		color: var(--text);
		background-color: var(--card-bg);
		border-radius: 8px;
		transition: transform 0.2s ease-in-out, background-color 0.2s ease-in-out, color 0.2s ease-in-out;
	}
	.social-card:hover {
		transform: translateY(-2px);
		background-color: rgb(var(--accent-light), 0.1);
	}
	.social-card svg {
		flex-shrink: 0;
	}
	.social-card span {
		font-size: 1.1rem;
		font-weight: 500;
	}
	.youtube:hover {
		color: #ff0000;
	}
	.blog:hover {
		color: #00ff00;
	}
	.github:hover {
		color: #f5f5f5;
	}
	.email:hover {
		color: #4a9eff;
	}
	.cv:hover {
		color: #ff9900;
	}
</style>